{
  "shortcuts": [
    {
      "name": "Shutdown",
      "command": "gnome-session-quit --power-off",
      "binding": "<Super>Escape"
    },
    {
      "name": "Gnome-Tweaks",
      "command": "gnome-tweaks",
      "binding": "<Super>U"
    },
    {
      "name": "Run Terminal",
      "command": "alacritty",
      "binding": "<Super>Return"
    },
    {
      "name": "Launch Bottom",
      "command": "alacritty -e btm",
      "binding": "<Super>X"
    },
    {
      "name": "Launch Rofi",
      "command": "rofi -show drun",
      "binding": "<Super>R"
    },
    {
      "name": "Web Browser",
      "command": "firefox",
      "binding": "<Super>W"
    },
    {
      "name": "Steam",
      "command": "steam",
      "binding": "<Super>G"
    },
    {
      "name": "Spotify - Next",
      "command": "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next",
      "binding": "<Super>bracketright"
    },
    {
      "name": "Spotify - Previous",
      "command": "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous",
      "binding": "<Super>bracketleft"
    },
    {
      "name": "Spotify - Play/Stop",
      "command": "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause",
      "binding": "<Super>space"
    }
  ]
}
