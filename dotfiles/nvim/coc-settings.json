{
	"codeLens.enable": true,
	"diagnostic.virtualText": true,
	"diagnostic.virtualTextCurrentLineOnly": false,
	"diagnostic.checkCurrentLine": true,
	"diagnostic.messageTarget": "echo",

	"coc.preferences.enableMessageDialog": false,
	"coc.preferences.colorSupport": true,

	"clangd.semanticHighlighting": true,
	"clangd.enabled": true,
	"clangd.arguments": ["--clang-tidy", "--clang-tidy-checks=clang-analyzer-*,misc-*,bugprone-*,performance-*,readability-*"],
	"clangd.checkUpdates": false,
	"clangd.disableDiagnostics": false,
	"clangd.disableSnippetCompletion": false,
	"clangd.compilationDatabasePath": "",
	"clangd.fallbackFlags": ["-std=c++20"],
	"clangd.path": "clangd",
	"clangd.serverCompletionRanking": true,
	"languageserver": {
		"cmake": {
			"command": "cmake-language-server",
			"filetypes": ["cmake"],
			"rootPatterns": [
				"build/"
			],
			"initializationOptions": {
				"buildDirectory": "build"
			}
		}
	},
	"Lua.diagnostics.globals": ["vim"]
}
