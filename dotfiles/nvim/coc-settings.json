{
	"codeLens.enable": true,
	"diagnostic.virtualText": true,
	"diagnostic.virtualTextCurrentLineOnly": false,
	"diagnostic.checkCurrentLine": true,
	"diagnostic.messageTarget": "echo",

	"coc.preferences.enableMessageDialog": false,

	"clangd.semanticHighlighting": true,
	"clangd.enabled": true,
	"clangd.arguments": ["--clang-tidy", "--clang-tidy-checks=cppcoreguidelines-*,clang-analyzer-*"],
	"clangd.checkUpdates": false,
	"clangd.disableDiagnostics": false,
	"clangd.disableSnippetCompletion": false,
	"clangd.compilationDatabasePath": "",
	"clangd.fallbackFlags": ["-std=c++20"],
	"clangd.path": "clangd",
	"clangd.serverCompletionRanking": true,
	"languageserver": {
		"cmake": {
			"command": "cmake-language-server",
			"filetypes": ["cmake"],
			"rootPatterns": [
				"build/"
			],
			"initializationOptions": {
				"buildDirectory": "build"
			}
		}
}
}
