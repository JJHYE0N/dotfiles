# Startup settings
# {{{
# Keyboard configure
exec --no-startup-id export XMODIFIERS="@im=fcitx"
exec --no-startup-id export GTK_IM_MODULE=fcitx
exec --no-startup-id export QT_IM_MODULE=fcitx
exec --no-startup-id fcitx
exec --no-startup-id "setxkbmap -layout us -option ctrl:nocaps"
exec --no-startup-id "setxkbmap -layout us -option korean:ralt_rctrl"
exec --no-startup-id xset +fp /home/haku/.fonts
exec --no-startup-id xset fp rehash
# Monitor
exec --no-startup-id compton
exec --no-startup-id xrandr --output eDP-1-1 --off
exec --no-startup-id feh --bg-fill /home/haku/Pictures/solarized-wallpaper-ubuntu.png
exec --no-startup-id rfkill unblock bluetooth
exec_always --no-startup-id $HOME/.config/polybar/launch.sh
# }}}

